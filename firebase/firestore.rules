      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /notices/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /emergency/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /delivery/{document} {
      allow create: if request.auth != null;
